<?xml version="1.0" encoding="utf-8"?>
<!--登录界面-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/login"
    tools:context=".MainActivity">
    <ImageView
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:src="@mipmap/logo"
        android:layout_width="80dp"
        android:layout_height="80dp" />

    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <ImageView
            android:background="@mipmap/user"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            />
        <View
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="#ffffff"/>
        <EditText
            android:textColor="#ffffff"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext_selet_bg"
            android:textCursorDrawable="@drawable/text_cursor_drawable"
            android:id="@+id/userID"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@mipmap/passwd"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            />
        <View
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="#ffffff"/>
        <EditText
            android:textColor="#ffffff"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext_selet_bg"
            android:textCursorDrawable="@drawable/text_cursor_drawable"
            android:layout_marginLeft="10dp"
            android:id="@+id/user_passWD"
            android:inputType="textPassword"
            android:layout_width="190dp"
            android:layout_height="wrap_content" />
        <ImageButton
            android:id="@+id/passwd_show_button"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@mipmap/hide_passwd"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="80dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <Button
            android:id="@+id/login"
            android:text="登录"
            android:textColor="#99e2e2"
            android:background="@drawable/button_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <Button
            android:id="@+id/rigister"
            android:text="注册"
            android:textColor="#99e2e2"
            android:background="@drawable/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:layout_marginTop="20dp"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:textColor="#ffffff"
        android:text="忘记密码?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>